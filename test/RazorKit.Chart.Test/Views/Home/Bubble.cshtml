@{
    ViewData["Title"] = "Bubble Chart";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@using RazorKit

@{
    var data = new List<object> { new { x = 20, y = 30, r = 15 }, new { x = 40, y = 10, r = 10 } };
}

@{
    var chart =
            Html.RK().Chart("canvasId")
            .Data(d => d
                .Datasets(ds =>
                    ds.Bubble()
                    .Label("Bubble Dataset")
                    .Data(data)
                )
            );
}

@chart.Render()