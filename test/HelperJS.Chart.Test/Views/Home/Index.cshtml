      }
</script>

@using HelperJS

@{
    var line = Html.JS().Chart()
    .Line("line")
    .Data(d => d
        .Labels("a", "b")
        .Datasets(ds =>
            {
                ds.Add("chart 1")
                .Data(1.0, 3.5);

                ds.Add("chart 2")
                .Data(1.0, 2.5);
            }))
    .Options(o =>
        o.Plugins(p =>
            {
                p.Title(t => t.Text("title").Display(true).Position(TitlePosition.Top)
                    .Font(f => f.Weight(Weight.Bolder).Size(20.5)));

                p.Legend(l => l.Display(true).OnHover("handleHover"));
            }
        ));

    var test = "";
}

@line.Render()
