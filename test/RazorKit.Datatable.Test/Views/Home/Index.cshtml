@using RazorKit

@{
    var datatable = Html.DataTable<Person>()
            .Columns(c =>
            {
                c.Field(f => f.Id).Visible(false);
                c.Field(f => f.Name).Title("Name");
                c.Field(f => f.Age);
                c.Command(c => c.IconClass("bi bi-trash").OnClick("onDelete").BtnClass("btn btn-sm btn-danger").Width(5));
                c.Command(c => c.Text("Edit").OnClick("onDelete").BtnClass("btn btn-sm btn-success").Width(5));
            })
            .DataSource(ds => ds.URL(Url.Action("GetDataResult")).Method("POST"))
            .ServerSide(true)
            .Language(l => l.Search("Search By: "))
            .Orders(o =>
            {
                o.Add(x => x.Name, OrderBy.Ascending);
            })
            .Filters(f =>
            {
                f.Add(x => x.Id).GreaterThanOrEqual(1);
            })
            .Callbacks(c => c.InfoCallback("callbackTest"))
            .FixedColumns(f => f.Start(0))
            .LengthMenu(lm => lm.Items(10, 25, 50, 100))
            .FixedHeader(fh => fh.Header(true).HeaderOffset(50))
            .ColReorder(true)
            .Caption("Caption of table")
            ;
}

@(datatable.Render())

